<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/style2.css" />
    <title>@ViewData["Title"] - TP_WEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP_WEB.styles.css" asp-append-version="true" />
</head>
<body class="A-Propos">
  
    <!--    Made by Erik Terwan    -->
    <!--   24th of November 2015   -->
    <!--        MIT License        -->
    <nav role="navigation">
        <div id="menuToggle">
            <!--
        A fake / hidden checkbox is used as click reciever,
        so you can use the :checked selector on it.
        -->
            <input type="checkbox" />

            <!--
        Some spans to act as a hamburger.

        They are acting like a real hamburger,
        not that McDonalds stuff.
        -->
            <span></span>
            <span></span>
            <span></span>

            <!--
        Too bad the menu has to be inside of the button
        but hey, it's pure CSS magic.
        -->
            <ul id="menu">
                <a asp-action="Index" asp-controller="Home" asp-area="">
                    <li>Acceuil</li>
                </a>
                   
                <a asp-action="A_propos" asp-controller="Home" asp-area="">  
                    <li>À Propos</li>
                </a>

                <a asp-action="Index" asp-controller="ExperienceProfessionels" asp-area="">
                    <li>Expérience Professionel</li>
                </a>

                <a asp-action="Index" asp-controller="FormationAcademiques" asp-area="">
                    <li>Formation Académique</li>
                </a>

                <a asp-action="Index" asp-controller="Portfolios" asp-area="">
                    <li>Mes Projets</li></a>

                <a asp-action="Contact" asp-controller="Home" asp-area="">    
                    <li>Contact</li>
                </a>

                <partial name="_LoginPartial"/>
            </ul>
            
        </div>
    </nav>
  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

