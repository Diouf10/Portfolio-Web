@model TP_WEB.Models.Portfolio

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier</h1>

<h4>Portfolio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="NomProjet" class="control-label"></label>
                <input asp-for="NomProjet" class="form-control" />
                <span asp-validation-for="NomProjet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionProjet" class="control-label"></label>
                <input asp-for="DescriptionProjet" class="form-control" />
                <span asp-validation-for="DescriptionProjet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeProjet" class="control-label"></label>
                <select asp-for="TypeProjet" class="form-select">
                    <option value="Web">Web</option>
                    <option value="Application">Application</option>
                    <option value="Jeux">Jeux</option>
                    <option value="Objets connecté">Objets connecté</option>
                    <option value="Autre">Autre</option>
                </select>
                <span asp-validation-for="TypeProjet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnologieUtilise" class="control-label"></label>
                <input asp-for="TechnologieUtilise" class="form-control" />
                <span asp-validation-for="TechnologieUtilise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreHeure" class="control-label"></label>
                <input asp-for="NombreHeure" class="form-control" />
                <span asp-validation-for="NombreHeure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdresseWeb" class="control-label"></label>
                <input asp-for="AdresseWeb" class="form-control" />
                <span asp-validation-for="AdresseWeb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleProjet" class="control-label"></label>
                <input asp-for="RoleProjet" class="form-control" />
                <span asp-validation-for="RoleProjet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image</label>
                <input name="ImgPortfolio" type="file" accept="image/*" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Afficher" /> @Html.DisplayNameFor(model => model.Afficher)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
