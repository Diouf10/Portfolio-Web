                <input asp-for="NomEntreprise" class="form-control" />
                <span asp-validation-for="NomEntreprise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PosteOccupe" class="control-label"></label>
                <input asp-for="PosteOccupe" class="form-control" />
                <span asp-validation-for="PosteOccupe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionTaches" class="control-label"></label>
                <input asp-for="DescriptionTaches" class="form-control" />
