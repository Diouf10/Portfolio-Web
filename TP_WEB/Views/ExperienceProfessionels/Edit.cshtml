            </div>
            <div class="form-group">
                <label asp-for="AnneeEmbauche" class="control-label"></label>
                <input asp-for="AnneeEmbauche" class="form-control" />
                <span asp-validation-for="AnneeEmbauche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnneeFinEmploi" class="control-label"></label>
                <input asp-for="AnneeFinEmploi" class="form-control" />
                <span asp-validation-for="AnneeFinEmploi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiteEntreprise" class="control-label"></label>
                <input asp-for="SiteEntreprise" class="form-control" />
                <span asp-validation-for="SiteEntreprise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Revenir aux expériences profesionnels</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
